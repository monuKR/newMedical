<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/relative"
    android:layout_marginTop="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deliverto"
                android:layout_toRightOf="@id/pincode"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"></ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/gotocarthomeicon"
                android:layout_centerInParent="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_shopping_cart_black_24dp"></ImageView>

            <TextView
                android:id="@+id/deliverto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deliver to"
                android:textSize="12dp"></TextView>

            <TextView
                android:id="@+id/pincode"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deliverto"
                android:text="221105 varanasi"

                android:textSize="15dp"></TextView>
</RelativeLayout>


            <androidx.appcompat.widget.SearchView
                android:background="@drawable/circle"
                android:transitionName="example_transition"
                android:layout_marginRight="8dp"
                android:clickable="false"
                android:id="@+id/search"
                android:autofillHints="Search for Medicines"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></androidx.appcompat.widget.SearchView>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_above="@id/ll"
    android:layout_below="@+id/toolbar">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"

                android:layout_centerInParent="true"
                android:layout_height="110dp"
                android:layout_weight="1"
android:id="@+id/home_card1"
                card:cardCornerRadius="55dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imagee"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="30dp"

                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_add_circle_outline_black_24dp"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="#000"
                        android:layout_centerHorizontal="true"
                        android:text="Medicine"
                        android:layout_below="@+id/imagee"></TextView>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_centerInParent="true"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:id="@+id/home_card2"
                card:cardCornerRadius="55dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageee"
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:layout_marginTop="30dp"

                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_call_black_24dp"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="#000"
                        android:layout_centerHorizontal="true"
                        android:text="Order"
                        android:layout_below="@+id/imageee"></TextView>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </LinearLayout>





    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_centerInParent="true"
                android:layout_height="110dp"
                android:layout_weight="1"
android:id="@+id/home_card3"
                card:cardCornerRadius="55dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageeee"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="30dp"

                        android:layout_centerHorizontal="true"
                        android:src="@drawable/medical"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="#000"
                        android:layout_centerHorizontal="true"
                        android:text="Diagnostic"
                        android:layout_below="@+id/imageeee"></TextView>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:id="@+id/home_card4"
                android:layout_centerInParent="true"
                android:layout_height="110dp"
                android:layout_weight="1"

                card:cardCornerRadius="55dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageeeee"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="30dp"

                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_local_offer_black_24dp"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="#000"
                        android:layout_centerHorizontal="true"
                        android:text="Offers"
                        android:layout_below="@+id/imageeeee"></TextView>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            card:cardCornerRadius="8dp"
            android:layout_height="59dp"
android:id="@+id/myorder"
            android:layout_margin="8dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart1"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_shopping_cart_black_24dp"
                    android:layout_centerVertical="true"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/cart1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:text="My orders"></TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            card:cardCornerRadius="8dp"
            android:layout_height="59dp"

            android:layout_margin="8dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/question"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_help_outline_black_24dp"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/question"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_centerVertical="true"
                    android:text="Need help?"></TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            card:cardCornerRadius="8dp"
            android:layout_height="59dp"

            android:layout_margin="8dp"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rate"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_rate_review_black_24dp"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/rate"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_centerVertical="true"
                    android:text="Rate us"></TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>